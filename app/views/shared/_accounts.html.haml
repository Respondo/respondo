- model_slug = model.class.to_s.downcase

.row
  .col
    %h3 New accounts
    %p.lead Click to add.
    .list-group.list-group-horizontal.flex-wrap
      - providers.each do |provider|
        - unless model.account_for_provider?(provider)
          = auth_provider_link("Authorize #{provider_human_name(provider)}",
            provider, model_slug, class: 'list-group-item list-group-item-action col-sm-6 text-center')

  .col
    %h3 Existing accounts
    %p.lead Click to remove.
    .list-group.list-group-horizontal.flex-wrap
      - existing_accounts.each do |account|
        = link_to "Remove #{provider_human_name(account.provider)}",
          [model, account], method: :delete,
          class: 'list-group-item list-group-item-action col-sm-6 text-center'
