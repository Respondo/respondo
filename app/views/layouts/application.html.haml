!!!
%html
  %head
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv': 'Content-Type' }/
    %title Respondo
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .navbar.navbar-default
      .container
        .navbar-header
          .navbar-brand Respondo
        %ul.nav.navbar-nav
          %li= link_to 'Respondo', root_path
          %li= link_to 'Brands', brands_path
        %p.navbar-text.navbar-right
          - if user_signed_in?
            - if current_brand.nil?
              %span
                = auth_twitter_link('Login Brand', 'brand')
            - else
              %span
                = link_to 'Edit Brand', edit_brand_path(current_brand)
            %span
              = current_user.name
              = link_to 'Edit User', edit_user_path(current_user)
              = link_to '(logout)', logout_path, method: :delete
          - else
            = auth_google_link('Login User', 'user')
    .container
      - if flash.any?
        - flash.each do |type, message|
          %div{ class: "alert alert-#{type}" }= message
      = yield
