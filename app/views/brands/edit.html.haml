= form_with url: brand_remove_user_path(@brand) do |remove_user_form|
  = remove_user_form.select :user_id, options_for_select(remove_users_dropdown_options)
  = remove_user_form.submit 'Remove User'

= form_with url: brand_add_user_path(@brand) do |remove_user_form|
  = remove_user_form.select :user_id, options_for_select(add_users_dropdown_options)
  = remove_user_form.submit 'Add User'

%hr

%ul
  - @brand.users.each do |user|
    %li= user.name
