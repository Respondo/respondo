%h4 Brands
%hr

= form_with url: brands_path, local: true, method: :get,
  class: 'form-inline col-sm-12', html: { autocomplete: 'off' } do |search_form|
  .input-group.col-sm-8
    = search_form.text_field :query, required: true, value: request.parameters[:query],
      placeholder: 'Search by brand screen name', class: 'form-control'
    .input-group-append
      = link_to 'Clear Search', brands_path, class: 'btn btn-outline-secondary'
  = search_form.submit 'Search', name: nil, class: 'btn btn-outline-success col-sm-3 ml-auto'

.list-group.list-group-horizontal.flex-wrap.mt-3
  - @brands.each do |brand|
    = link_to brand.screen_name, brand_tickets_path(brand), class: 'list-group-item list-group-item-action col-sm-3 text-center'

.row.mt-3
  .ml-auto.mr-auto
    != pagy_bootstrap_nav(@pagy)
